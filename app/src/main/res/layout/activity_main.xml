<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:padding="20dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textSize="13sp"
        android:text="segMode=Default"/>

    <com.dld.view.SegmentedControlView
        android:layout_width="300dp"
        android:layout_height="40dp"
        app:segMarginLeft="3dp"
        app:segMarginTop="3dp"
        android:id="@+id/scv1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textSize="13sp"
        android:text="segMode=Circle,segSelectedItem=1"/>

    <com.dld.view.SegmentedControlView
        android:layout_width="300dp"
        android:layout_height="40dp"
        app:segMarginLeft="3dp"
        app:segMarginTop="3dp"
        app:segMode="Circle"
        app:segSelectedItem="1"
        app:segOuterColor="@android:color/holo_purple"
        app:segItemColor="@android:color/white"
        app:segSelectedTextColor="@android:color/black"
        app:segDisabledOuterColor="#50aa66cc"
        android:id="@+id/scv2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textSize="13sp"
        android:text="segMode=Default,segScrollEnable=false"/>

    <com.dld.view.SegmentedControlView
        android:layout_width="300dp"
        android:layout_height="40dp"
        app:segScrollEnable="false"
        app:segMarginLeft="3dp"
        app:segMarginTop="3dp"
        app:segOuterColor="@android:color/holo_orange_dark"
        app:segItemColor="@android:color/holo_orange_light"
        app:segSelectedTextColor="@android:color/white"
        app:segTextColor="@android:color/white"
        android:entries="@array/sc3Array"
        android:id="@+id/scv3"/>

</LinearLayout>
